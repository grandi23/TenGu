                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.Name))
                        {
                            @item.Name
                        }
                        else if (!string.IsNullOrWhiteSpace(item.PName))
                        {
                            @item.PName
                        }
                        else
                        {
                            @item.TempName
                        }
                    </td>
                    <td>
                        @item.Num
                    </td>
                    <td>
                        @totalPrice
                    </td>
                    <td class="col_input_freightFee" style="padding: 0;width:60px;display:none;">
                        <div class="cell_value">0</div>
