        decimal storedMoney = string.IsNullOrEmpty(dt.Rows[0][2].ToString()) ? 0 : Decimal.Parse(dt.Rows[0][2].ToString());

        foreach (var item in purchaseList)
        {
            decimal totalPrice = 0;
            totalPrice = Math.Round(item.TotalPrice, 2);
