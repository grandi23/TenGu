@model ThBiz.Common.Entity.PurchaseMonitorLog
@{
    Layout = null;
}

@if (Model != null)
{
    <div class="col-lg-12 row">
        <table class="table table-bordered" style="width: 610px; margin: 5px;">
            <tr>
                <td style="width: 20%; font-weight: 600;">日志编号</td>
                <td style="width: 30%;">@Model.PKID</td>
                <td style="width: 20%; font-weight: 600;">操作时间</td>
                <td style="width: 30%;">@Model.CreateDatetime.ToString("yyyy-MM-dd hh:mm")</td>
            </tr>
            <tr>
                <td style="font-weight: 600;">修改人</td>
                <td>@Model.CreateUserName</td>
                <td style="font-weight: 600;">操作方式</td>
                <td>@Model.Operation</td>
            </tr>
            <tr>
                <td colspan="2" style="font-weight: 600;">修改前</td>
                <td colspan="2" style="font-weight: 600;">修改后</td>
            </tr>
            <tr>
                <td colspan="2">
                    @ViewBag.BeforeMvcString
                </td>
                <td colspan="2">
                    @ViewBag.AfterMvcString
                </td>
            </tr>
        </table>
    </div>
}
else
{
    <div style="padding: 10px; margin: 5px; text-align: center; font-size: 16px;">
        暂无相关数据！
    </div>
}